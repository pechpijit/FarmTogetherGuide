<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MenuOneFragment">

    <FrameLayout
        android:id="@+id/panelCreate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/panel_tablero_main2" />

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="60dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:src="@drawable/pan_tablero"-->
        <!--android:scaleType="fitXY"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <FrameLayout
                android:id="@+id/tabCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_tab_selected">

                <ImageView
                    android:id="@+id/imgCrop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shop_crop" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tabTree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_tab">

                <ImageView
                    android:id="@+id/imgTree"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shop_tree" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tabAnimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_tab">

                <ImageView
                    android:id="@+id/imgAnimal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shop_animal" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tabPond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_tab">

                <ImageView
                    android:id="@+id/imgPond"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shop_pond" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tabFlower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_tab">

                <ImageView
                    android:id="@+id/imgFlower"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shop_flower" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:src="@drawable/banderola" />
            <TextView
                android:id="@+id/txtTabName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ผัก"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="115dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"/>


        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginLeft="25dp"-->
        <!--android:layout_marginTop="65dp"-->
        <!--android:layout_marginRight="25dp"-->
        <!--android:layout_marginBottom="100dp"-->
        <!--android:src="@drawable/panel_papel"-->
        <!--android:scaleType="fitXY"/>-->

        <FrameLayout
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/tablon">

            <FrameLayout
                android:id="@+id/btnBack"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_drawable_selector">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="กลับ"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </FrameLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="2dp"
        android:textStyle="bold"/>

</FrameLayout>